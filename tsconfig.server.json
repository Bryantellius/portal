{
    "compilerOptions": {
      "sourceMap": true,
      "watch": true,  
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "lib": [
          "es2017"
      ],
      "types": [
          "node", "express"
      ]
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
  }